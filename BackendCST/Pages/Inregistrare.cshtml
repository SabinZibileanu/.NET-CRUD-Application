@page
@model BackEndCST.Pages.InregistrareModel
@{
}


<link rel = "stylesheet" href = ""></link>
<div class = "container mt-5">
    <div class = "row justify-content-center align-items-center">
        <div class = "col-sm-12 col-md-12 col-lg-4"> 
            <h1 class="mb-3">Inregistrare</h1>

            <form method = "post">
                <div asp-validation-summary="All" class="text-danger">
                </div>
                <div class = "mb-3">
                    <label class = "form-label" asp-for = "ModelInreg.email">Adresa Mail:</label>
                    <input type="text" asp-for = "ModelInreg.email" class = "form-control"/>
                    <span asp-validation-for = "ModelInreg.email" class="text-danger"></span>
                </div>

                <div class = "mb-3">
                    <label class = "form-label" asp-for = "ModelInreg.password">Parola:</label>
                    <input type="password" asp-for = "ModelInreg.password" class = "form-control"/>
                    <span asp-validation-for = "ModelInreg.password" class="text-danger"></span>
                </div>

                <div class = "mb-3">
                    <label class = "form-label" asp-for = "ModelInreg.confirm_password">Confirma parola:</label>
                    <input type="password" asp-for = "ModelInreg.confirm_password" class = "form-control"/>
                    <span asp-validation-for = "ModelInreg.confirm_password" class="text-danger"></span>
                </div>

                <div class = "mb-3">
                    <button type = "submit" class = "btn btn-primary">Inregistreaza-te</button>

                </div>

            </form>
        </div>
    </div>
</div>
